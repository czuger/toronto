.page-header
  = link_to new_<%= singular_table_name %>_path, class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-plus
    = t( '.new' ) + ' ' + <%= "'#{human_name}'" %>
  %h1= t( '.listing' ) + ' ' + <%=  "'#{plural_table_name}'" %>

.table-responsive
  %table.table.table-striped.table-bordered.table-hover
    %thead
      %tr
<% for attribute in attributes -%>
        %th <%= attribute.human_name %>
<% end -%>
        %th
        %th
        %th

    %tbody
      - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
        %tr
<% for attribute in attributes -%>
          %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
          %td= link_to t( '.show' ), <%= singular_table_name %>
          %td= link_to t( '.edit' ), edit_<%= singular_table_name %>_path(<%= singular_table_name %>)
          %td= link_to t( '.destroy' ), <%= singular_table_name %>, data: { confirm: t( '.are_you_sure' ) }, method: :delete
